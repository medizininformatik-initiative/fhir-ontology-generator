{
  "settings": {
    "analysis": {
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [
            "letter",
            "digit"
          ]
        },
        "edge_ngram_tokenizer_include_punctuation": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20,
          "token_chars": [
            "letter",
            "digit",
            "punctuation",
            "custom"
          ],
          "custom_token_chars": [
            "+-_"
          ]
        },
        "whitespace_tokenizer": {
          "type": "simple_pattern_split",
          "pattern": " "
        }
      },
      "analyzer": {
        "edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "edge_ngram_analyzer_include_punctuation": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer_include_punctuation",
          "filter": [
            "lowercase"
          ]
        },
        "lowercase_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "termcode": {
        "properties": {
          "code": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer_include_punctuation",
            "search_analyzer": "lowercase_analyzer"
          },
          "display": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer",
            "search_analyzer": "lowercase_analyzer"
          },
          "system": {
            "type": "text",
            "index": false
          },
          "version": {
            "type": "long",
            "index": false
          }
        }
      },
      "value_sets": {
        "type": "keyword"
      },
      "display": {
        "properties": {
          "original": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer_include_punctuation",
            "search_analyzer": "lowercase_analyzer"
          },
          "de": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer_include_punctuation",
            "search_analyzer": "lowercase_analyzer"
          },
          "en": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer_include_punctuation",
            "search_analyzer": "lowercase_analyzer"
          }
        }
      }
    }
  }
}