{
  "$schema": "https:://mediziniformatik-initiative/fdpg/fhirMapping/v2/schema",
  "definitions": {
    "valueTypeDefinition": {
      "type": "string",
      "enum": [
        "concept",
        "quantity",
        "reference",
        "date",
        "composite-quantity",
        "composite-concept",
        "Age"
      ]
    },
    "termCode": {
      "type": "object",
      "description": "The termCode defines a concept based on a coding system (i.e. LOINC). The triplet of code, system and version identify the concept.",
      "properties": {
        "code": {
          "type": "string"
        },
        "system": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "display": {
          "type": "string"
        }
      },
      "required": [
        "code",
        "system",
        "display"
      ],
      "additionalProperties": false
    },
    "fixedCriteria": {
      "type": "object",
      "properties": {
        "searchParameter": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "value": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/termCode"
          }
        }
      },
      "required": [
        "searchParameter",
        "value"
      ],
      "additionalProperties": false
    },
    "attributeSearchParameter": {
      "type": "object",
      "properties": {
        "attributeKey": {
          "#ref": "#/definitions/termCode"
        },
        "attributeType": {
          "$ref": "#/definitions/valueTypeDefinition"
        },
        "attributeSearchParameter": {
          "type": "string"
        }
      }
    },
    "attributeSearchParameters": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/attributeSearchParameter"
      }
    },
    "entry": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "context": {
          "$ref": "#/definitions/termCode"
        },
        "key": {
          "$ref": "#/definitions/termCode"
        },
        "fhirResourceType": {
          "type": "string"
        },
        "termCodeSearchParameter": {
          "type": "string"
        },
        "fixedCriteria": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/fixedCriteria"
          }
        },
        "valueSearchParameter": {
          "type": "string"
        },
        "valueType": {
          "$ref": "#/definitions/valueTypeDefinition"
        },
        "attributeSearchParameters": {
          "$ref": "#definitions/attributeSearchParameters"
        },
        "timeRestrictionParameter": {
          "type": "string"
        }
      },
      "required": [
        "context",
        "key",
        "fhirResourceType"
      ],
      "additionalProperties": false
    }
  },
  "title": "termCodeMappingDefinition",
  "description": "Using the termCode of a concept as a code the termCodeMapping provides additional information for building the query",
  "type": "array",
  "minItems": 1,
  "items": {
    "$ref": "#/definitions/entry"
  }
}